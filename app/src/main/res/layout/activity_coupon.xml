<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coupon">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/header_tichdiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/quaylai12"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_quaylai"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/mathanhvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupon của bạn"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_toRightOf="@id/quaylai12"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mathanhvien"
                android:layout_marginTop="10dp"
                android:background="#616161"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_tichdiem">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_below="@+id/couponcuaban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <LinearLayout
                        android:id="@+id/edt"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/duongvien4"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Nhập mã khuyến mãi"
                            android:paddingStart="10dp"
                            android:drawableEnd="@drawable/qr"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:drawableRight="@drawable/qr"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ln"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@id/edt"
                        android:background="@drawable/duongvien4"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/pickup1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ưu đãi 20% khi đặt Pick Up(Tự đến lấy)"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:layout_marginTop="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp">
                        </TextView>
                    </LinearLayout>
                    //2
                    <LinearLayout
                        android:id="@+id/ln2"
                        android:layout_below="@id/ln"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/duongvien4"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/bonmuoi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ưu đãi giảm 40.000d cho đơn hàng"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:layout_marginTop="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>